<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F5DC;"
   xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="cqu.mavenproject1.DisasterAlertController">
   <children>
      <!-- Submit button -->
      <Button fx:id="alertsubmitButton" layoutX="505.0" layoutY="351.0" mnemonicParsing="false"
         style="-fx-font-family: serif;" text="Submit">
         <font>
            <Font name="Serif Regular" size="13.0" />
         </font>
      </Button>

      <!-- Header Labels -->
      <Label layoutX="30.0" layoutY="21.0" prefHeight="26.0" prefWidth="149.0" text="Rapid Response">
         <font>
            <Font name="Chalkboard SE Light" size="20.0" />
         </font>
      </Label>
      <Label layoutX="30.0" layoutY="46.0" prefHeight="26.0" prefWidth="193.0"
         text="Disaster Management and response!">
         <font>
            <Font name="Apple Braille" size="11.0" />
         </font>
      </Label>

      <!-- Top navigation pane -->
      <Pane prefHeight="76.0" prefWidth="600.0" style="-fx-background-color: #ADD8E6;">
         <children>
            <Label layoutX="20.0" layoutY="11.0" prefHeight="26.0" prefWidth="149.0"
               text="Rapid Response">
               <font>
                  <Font name="Chalkboard SE Light" size="20.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="36.0" prefHeight="26.0" prefWidth="193.0"
               text="Disaster Management and response!">
               <font>
                  <Font name="Apple Braille" size="11.0" />
               </font>
            </Label>
            <!-- Button to go to the dashboard -->
            <Button fx:id="alertgotodashboardButton" layoutX="413.0" layoutY="11.0"
               mnemonicParsing="false" text="Go to Dashboard">
               <font>
                  <Font name="Serif Regular" size="13.0" />
               </font>
            </Button>
            <!-- Logout button -->
            <Button fx:id="logoutButton" layoutX="527.0" layoutY="10.0" mnemonicParsing="false"
               text="Log Out">
               <font>
                  <Font name="Serif Regular" size="13.0" />
               </font>
            </Button>
         </children>
      </Pane>

      <!-- Alert section labels and input fields -->
      <Label layoutX="35.0" layoutY="132.0" text="Alert Type:">
         <font>
            <Font name="Serif Regular" size="13.0" />
         </font>
      </Label>

      <Label layoutX="22.0" layoutY="169.0" text="Severity (1-5):">
         <font>
            <Font name="Serif Regular" size="13.0" />
         </font>
      </Label>

      <Label layoutX="69.0" layoutY="244.0" text="Date:">
         <font>
            <Font name="Serif Regular" size="13.0" />
         </font>
      </Label>

      <Label layoutX="55.0" layoutY="207.0" text="Critical:">
         <font>
            <Font name="Serif Regular" size="13.0" />
         </font>
      </Label>

      <Label layoutX="26.0" layoutY="90.0" text="Add Alert" textFill="#c21119">
         <font>
            <Font name="Didot" size="18.0" />
         </font>
      </Label>

      <!-- Date picker -->
      <DatePicker fx:id="alertdatePicker" layoutX="121.0" layoutY="240.0" prefHeight="26.0"
         prefWidth="150.0" style="-fx-font-family: serif;" />

      <!-- Choice box for alert types -->
      <ChoiceBox fx:id="alertTypeChoiceBox" layoutX="121.0" layoutY="127.0" prefWidth="150.0"
         style="-fx-font-family: serif;" />

      <!-- Spinner for severity selection -->
      <Spinner fx:id="alertseveritySpinner" layoutX="121.0" layoutY="164.0" prefHeight="26.0"
         prefWidth="150.0" style="-fx-font-family: serif;" />

      <Label layoutX="36.0" layoutY="280.0" text="Description:">
         <font>
            <Font name="Serif Regular" size="13.0" />
         </font>
      </Label>

      <!-- Text field for description -->
      <TextField fx:id="alertdescriptionTextField" layoutX="120.0" layoutY="280.0" prefHeight="56.0"
         prefWidth="300.0" style="-fx-font-family: serif;" />

      <!-- Choice box for critical selection -->
      <ChoiceBox fx:id="alertcriticalChoiceBox" layoutX="121.0" layoutY="202.0" prefWidth="150.0"
         style="-fx-font-family: serif;" />
   </children>
</AnchorPane>